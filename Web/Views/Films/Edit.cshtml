@model Domain.ViewModel.CreateEditFilmVm

@{
    ViewBag.Title = "Edit Film";
}

<div class="container">
    <h2>Edit Film</h2>
    <form asp-action="EditAndAdd" asp-controller="Films" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>Video</label>
            <input type="file" name="videoFile" accept="video/mp4, video/ogg, video/webm" />
        </div>

        <div class="form-group">
            <label>Image</label>
            <input type="file" name="imageFile" accept="image/jpg, image/png, image/jpeg, image/webp, image/avif, image/svg+xml, image/x-icon, image/bmp" />
        </div>

        <h3>Questions</h3>
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions.ElementAt(i);
            <div class="form-group">
                <label>Question @i</label>
                <input name="Questions[@i].Id" type="hidden" value="@question.Id" />
                <input name="Questions[@i].Text" type="text" value="@question.Text" class="form-control" />
            </div>

            <div class="form-group">
                <label>Answers for this Question</label>
                @for (int j = 0; j < question.Answers.Count; j++)
                {
                    var answer = question.Answers.ElementAt(j);
                    <div class="form-group">
                        <label>Answer @j</label>
                        <input name="Questions[@i].Answers[@j].Id" type="hidden" value="@answer.Id" />
                        <input name="Questions[@i].Answers[@j].Text" type="text" value="@answer.Text" class="form-control" />
                        <input type="radio" name="Questions[@i].Answers[@j].IsTrue" value="true" @(answer.IsTrue ? "checked" : "") /> Correct
                    </div>
                }
            </div>
        }

        <div class="form-group">
            <a class="btn btn-secondary" href="@Url.Action("AddQuestion", "Films", new { filmId = Model.Id })">Add Question</a>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
