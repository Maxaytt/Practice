@model Domain.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
  
    <link rel="stylesheet" href="~/css/profile/profile.css">
</head>
<body>
    
        
    <div class="container my-5">
        <h1>User Profile</h1>
      <div class="card">
        <div class="card-body">
          <form id="editProfileForm"  class="mt-3">
            <div class="form-group">
                <label for="firstName">Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="@Model.FirstName" readonly>
            </div>
            <div class="form-group">
                <label for="lastName">Surname</label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="@Model.LastName" readonly>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="@Model.Email" readonly>
            </div>
            <div class="form-group">
                <label for="gmina">Gmina</label>
                <input type="text" class="form-control" id="gmina" name="gmina" value="@Model.Gmina" readonly>
            </div>
            <button hidden type="submit" id="save" class="btn btn-primary">Save Changes</button>
            <button hidden type="button"id="cancel" class="btn btn-secondary" onclick="cancelEdit()">Cancel</button>
        </form>
              <button id="edit"class="btn btn-primary" onclick="editProfile()">Edit</button>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <script src="~/js/profile.js"></script>
</body>
</html>


