@model IEnumerable<Domain.Models.Film>

<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @foreach (var film in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <h5 class="card-title">@film.Name</h5>
                        <img class="card-img-top" src="@film.ImageUrl" alt="@film.Name">
                        <div class="card-body">
                            <a asp-controller="Films" asp-action="Edit" asp-route-id="@film.Id" class="btn btn-primary">Edit</a>
                            <form asp-controller="Films" asp-action="Delete" asp-route-id="@film.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
